{
   "name": "justJK",
   "version": "1.0",
   "manifest_version": 2,
   "description": "Add j/k (for logical down/up) keyboards shortcuts to a variety of web sites.",

   "permissions": [
      "<all_urls>"
   ],

   "background": {
      "scripts": [
         "script/util.js",
         "script/parse.js",
         "script/background.js"
      ]
   },

   "content_scripts": [
      {
         "matches"    : [ "<all_urls>" ],
         "css"        : [ "css/highlight.css" ],
         "js"         : [ "third-party/keypress.js",
                          "script/util.js",
                          "script/dom.js",
                          "script/scroll.js",
                          "script/score.js",
                          "script/hacks.js",
                          "script/foreground.js"
                        ],
         "run_at"     : "document_start",
//       "run_at"     : "document_end",
         "all_frames" :  false
      }
   ],

   "web_accessible_resources": [
       "config.txt"
     ]
}

