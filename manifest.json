{
   "name": "justJK",
   "version": "1.0",
   "manifest_version": 2,
   "description": "Add j/k (for logical down/up) keyboards shortcuts to a variety of web sites.",

   "permissions": [
      "<all_urls>"
   ],

   "background": {
      "scripts": [
         "script/background.js"
      ]
   },

   "content_scripts": [
      {
         "matches"    : [ "<all_urls>" ],
         "css"        : [ "css/highlight.css" ],
         "js"         : [ "script/foreground.js" ],
         "run_at"     : "document_end",
         "all_frames" :  true
      }
   ]
}

